<?xml version="1.0" encoding="UTF-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="WhiteHeadingText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="WhiteParagraphText" parent="@android:style/TextAppearance">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">13dp</item>
	</style>

	<style name="TopBar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:weightSum">8</item>
		<item name="android:background">#333333</item>
	</style>

	<style name="DummyPlaceholder">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_weight">2</item>
	</style>

	<style name="TopBarTitle">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">4</item>
		<item name="android:textSize">18dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#d4932d</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
	</style>

	<style name="ButtonInSingle">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textSize">12dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:minWidth">0dp</item>
	</style>

</resources>